binds {

	// Q - Zed              W - Firefox       E - Dolphin      R - Rider         T - Alacritty
	// A - Logseq           S - Sublime Text  D - Fuzzel       F - *Maximize     G - Sublime Merge
	// Z - Zoom             X - Vikunja       C - Caprine      V - Vestktop      B - OBS

	// Y - WnR              U -               I - Calibre      O - Okular        P - RSS Guard
	// H - SQLite Browser   J -               K - Krita        L -
	// N - EasyEffects      M - foobar2000


	Mod+Shift+Q { spawn "zeditor"; }
    Mod+Shift+W { spawn-sh "firefox & sleep 3; niri msg action toggle-window-floating"; }
    Mod+Shift+E { spawn "dolphin"; } // file manager
    Mod+Shift+R { spawn "rider"; }
    Mod+Shift+T hotkey-overlay-title="Open a Terminal: alacritty" { spawn "alacritty"; }
    Mod+Shift+I { spawn "calibre"; }
    Mod+Shift+O { spawn "okular"; }
    Mod+Shift+P { spawn "rssguard"; }

    Mod+Shift+A { spawn "logseq"; }
    Mod+Shift+D hotkey-overlay-title="Run an Application: fuzzel" { spawn "fuzzel"; }
    Mod+Shift+S { spawn "subl"; }
    Mod+Shift+G { spawn "smerge"; }
    Mod+Shift+H { spawn "sqlitebrowser"; }
    Mod+Shift+K { spawn-sh "GDK_BACKEND=x11 QT_QPA_PLATFORM=xcb krita"; }

    Mod+Shift+Z { spawn "zoom"; }
    Mod+Shift+X { spawn-sh r#"$RIKAI/Config/Linux/Vikunja-patched.AppImage"#; }
    Mod+Shift+C { spawn "caprine"; }
    Mod+Shift+V { spawn "vesktop"; }
    Mod+Shift+B{ spawn "obs"; }
    Mod+Shift+N { spawn "easyeffects"; }
    Mod+Shift+M { spawn-sh "beefweb_mpris"; }

    Mod+Q { spawn-sh "~/bin/niriutils focus -w dev.zed.Zed-Preview"; }
    Mod+W { spawn-sh "~/bin/niriutils focus -w firefox"; }
    Mod+E { spawn-sh "~/bin/niriutils focus -w dolphin"; }
    Mod+R { spawn-sh "~/bin/niriutils focus -w rider"; }
    Mod+I { spawn-sh "~/bin/niriutils focus -w calibre"; }
    Mod+O { spawn-sh "~/bin/niriutils focus -w okular"; }
    Mod+P { spawn-sh "~/bin/niriutils focus -w rssguard"; }

    Mod+A { spawn-sh "~/bin/niriutils focus -w logseq"; }
    Mod+S { spawn-sh "~/bin/niriutils focus -w subl"; }
	Mod+D { spawn "fuzzel"; }
    Mod+G { spawn-sh "~/bin/niriutils focus -w smerge"; }
    Mod+H { spawn-sh "~/bin/niriutils focus -w sqlitebrowser"; }
    Mod+K { spawn-sh "~/bin/niriutils focus -w krita"; }

    Mod+Z { spawn-sh "~/bin/niriutils focus -w zoom"; }
    Mod+X { spawn-sh "~/bin/niriutils focus -w vikunja"; }
    Mod+C { spawn-sh "~/bin/niriutils focus -w caprine"; }
    Mod+V { spawn-sh "~/bin/niriutils focus -w vesktop"; }
    Mod+B { spawn-sh "~/bin/niriutils focus -w com.obsproject.Studio"; }
    Mod+N { spawn-sh "~/bin/niriutils focus -w easyeffects"; }
    Mod+M { spawn-sh "~/bin/niriutils focus -w foobar2000.exe"; }
}
